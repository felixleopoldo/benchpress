{
    "title": "disc_bn",
    "description": "List of generateNStatesBN objects",
    "type": "array",
    "items": {
        "title": "disc_bn item",
        "description": "Parameter setting for generateNStatesBN",
        "type": "object",
        "properties": {
            "id": {
                "type": "string"
            },
            "min": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexprob"
            },
            "max": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexprob"
            },
            "nstates": {
                "type": "integer",
                "minimum": 2,
                "description": "Number of states per node (default: 2 for binary)"
            },
            "collider_effect": {
                "type": "boolean",
                "description": "Use OR-gate collider effects for nodes with multiple parents. Creates strong explaining away effects.",
                "default": false
            },
            "strong_effects": {
                "type": "boolean",
                "description": "Make ALL parent-child relationships strong (not just colliders). Ensures induced dependencies through collider descendants are detectable.",
                "default": false
            },
            "noisy_or": {
                "type": "boolean",
                "description": "Use noisy-OR parameterization. Creates proper explaining away effects at colliders while maintaining faithfulness. Recommended for testing conditional independence.",
                "default": false
            }
        },
        "required": [
            "min",
            "max",
            "nstates",
            "id"
        ],
        "additionalProperties": false,
        "examples": [
            {
                "id": "discbn",
                "min": 0.1,
                "max": 0.9,
                "nstates": 2
            },
            {
                "id": "discbn_collider",
                "min": 0.1,
                "max": 0.9,
                "nstates": 2,
                "collider_effect": true
            },
            {
                "id": "discbn_strong",
                "min": 0.5,
                "max": 0.5,
                "nstates": 2,
                "collider_effect": true,
                "strong_effects": true
            },
            {
                "id": "discbn_noisy_or",
                "min": 0.5,
                "max": 0.5,
                "nstates": 2,
                "noisy_or": true
            }
        ]
    },
    "uniqueItems": true
}