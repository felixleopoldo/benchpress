            },
            "datatype": {
                "type": "string",
                "enum": [
                    "discrete",
                    "continuous"
                ]
            },
            "n_samples": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegint"
            },
            "penalty": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegnumnull"
            },
            "randomits": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegint"
            },
            "prior": {
                "type": "string"
            },
            "ascore": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegnumnull"
            },
            "bscore": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegnumnull"
            },
            "clq": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegnumnull"
            },
            "sep": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegnumnull"
            },
            "mcmc_seed": {
                "$ref": "../../../schemas/definitions.schema.json#/definitions/flexnonnegint"
            },
            "timeout": {
